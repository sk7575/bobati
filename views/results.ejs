    var submitResults = document.querySelector(".submitResults");
    var yelpButton = document.querySelector(".yelp");

    yelpButton.addEventListener("click", function(){
      //once this button is clicked immediately do a post request
      var selections = JSON.stringify(userSelections);
      $.post('/results', {results: selections});

    })
    // loop for adding selections to an array
    for (i = 0; i < buttons.length; i++) {
      buttons[i].addEventListener("click", function() {
        // on button click, add data-eval value to array and send to next page function
        userSelections.push(this.dataset.eval);
        nextPage();
      });
    }

